<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="io.github.prabhuomkar.torchexpo.ui.playground.PlaygroundViewModel" />

        <variable
            name="model"
            type="io.github.prabhuomkar.torchexpo.data.db.model.Model" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.playground.vision.ImageSegmentationFragment">

        <ImageView
            android:id="@+id/inputImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/pytorch_logo"
            app:layout_constraintBottom_toTopOf="@+id/outputImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/outputImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/pytorch_logo"
            app:layout_constraintBottom_toTopOf="@+id/playground_footer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputImage" />

        <include
            android:id="@+id/playground_footer"
            layout="@layout/playground_footer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
