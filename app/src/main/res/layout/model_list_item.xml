<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    app:contentPadding="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableTint="@color/colorAccent"
            android:gravity="center"
            android:text="@string/model"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_model"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/modelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="FCN ResNet-101"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardType" />

        <TextView
            android:id="@+id/modelDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fully-Convolutional Network model with a ResNet-101 backbone"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/modelName" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/modelDescription">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PyTorch"
                android:textColor="@color/colorAccent"
                app:chipBackgroundColor="@color/colorAccentLight"
                app:chipIcon="@drawable/ic_publisher"
                app:chipIconSize="16dp"
                app:chipIconTint="@color/colorAccent"
                app:iconStartPadding="4dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 3, 2020"
                android:textColor="@color/colorAccent"
                app:chipBackgroundColor="@color/colorAccentLight"
                app:chipIcon="@drawable/ic_clock"
                app:chipIconSize="16dp"
                app:chipIconTint="@color/colorAccent"
                app:iconStartPadding="4dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COCO 2017"
                android:textColor="@color/colorAccent"
                app:chipBackgroundColor="@color/colorAccentLight"
                app:chipIcon="@drawable/ic_tags"
                app:chipIconSize="16dp"
                app:chipIconTint="@color/colorAccent"
                app:iconStartPadding="4dp" />

        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>